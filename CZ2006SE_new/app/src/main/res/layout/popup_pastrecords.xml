<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingEnd="5dp"
    android:paddingStart="5dp"
    >
    <TextView
        android:id="@+id/popUp_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lemonbrush"
        android:text="Past Records"
        android:textColor="@color/colorBlack"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popUp_title"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/pastRecords_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:text="NULL"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:paddingStart="5dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                />

            <TextView
                android:id="@+id/pastRecords_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="NULL"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:paddingStart="5dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                />

            <TextView
                android:id="@+id/pastRecords_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="NULL"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:paddingStart="5dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                />

            <TextView
                android:id="@+id/pastRecords_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="NULL"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:paddingStart="5dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                />

            <TextView
                android:id="@+id/pastRecords_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="NULL"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:paddingStart="5dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                />




        </LinearLayout>
    </ScrollView>
</RelativeLayout>